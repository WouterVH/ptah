<div>
  <form action="${context.action}" name="${context.name}" id="${context.id}"
	method="${context.method}" enctype="${context.enctype}"
	accept="${context.accept}" acceptCharset="${context.acceptCharset}"
	tal:attributes="autocomplete getattr(context, 'autocomplete', None)">

    <h1 class="documentFirstHeading" i18n:translate=""
        tal:condition="context.label">${context.label}</h1>
    <div class="form-description" i18n:translate=""
        tal:condition="context.description">${context.description}</div>

    <fieldset class="formPanel" tal:condition="context.widgets">
      <tal:block tal:repeat="context context.widgets.values()"
		 tal:content="structure pagelet:form-widget" />
    </fieldset>
   
    <tal:block tal:condition="context.subforms"
	       tal:repeat="context context.subforms"
	       tal:content="structure pagelet:form-view" />

    <tal:block content="structure pagelet:form-actions" />
  </form>
</div>
