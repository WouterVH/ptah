<div tal:condition="not errors"
     class="alert-message error">
  <a class="close" href="#">×</a>
  <p>${message}</p>
</div>

<div tal:condition="errors"
     class="alert-message block-message error">
  <a class="close" href="#">×</a>
  <p>${message}</p>
  <ul>
    <li tal:repeat="err errors"
	tal:content="structure err.render()">
    </li>
  </ul>
</div>
