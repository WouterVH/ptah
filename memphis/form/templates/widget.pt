<div class="${'clearfix error' if error else 'clearfix'}"
     tal:define="error context.error">
  <label tal:attributes="for context.id;
			 title context.field.description">
    ${context.label}
  </label>
  <div class="input">
    <tal:block tal:content="structure context.render()" />
    <span class="help-inline"
	  tal:condition="error"
	  tal:content="structure error.message"></span>
    <span class="help-block"
	  tal:condition="not error and context.field.description"
	  tal:content="structure context.field.description"></span>
  </div>
</div>
