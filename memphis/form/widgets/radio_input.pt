<div tal:attributes="class context.klass">
  <ul class="z-listing">
    <li tal:repeat="item context.items">
      <input type="radio"
             tal:define="checked item['checked']"
             tal:attributes="id item['id'];
                             name item['name'];
                             class context.klass;
                             value item['value'];
                             title context.title;
                             lang context.lang;
                             disabled context.disabled;
                             tabindex context.tabindex;
                             readonly context.readonly;
                             alt context.alt;
                             accesskey context.accesskey;
                             checked python: checked and 'checked' or None" />
      <label for="" tal:attributes="for item['id']">
        <span class="label" tal:content="item['label']">Label</span>
      </label>
    </li>
  </ul>
</div>
<input name="field-empty-marker" type="hidden" value="1"
       tal:attributes="name string:${context.name}-empty-marker" />
