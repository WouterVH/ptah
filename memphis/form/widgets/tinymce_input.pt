<textarea
   id="" name="" class="" cols="" rows=""
   tabindex="" disabled="" readonly="" accesskey=""
   tal:attributes="id context.id;
                   name context.name;
                   class context.klass;
                   style context.style;
                   title context.title;
                   lang context.lang;
                   onclick context.onclick;
                   ondblclick context.ondblclick;
                   onmousedown context.onmousedown;
                   onmouseup context.onmouseup;
                   onmouseover context.onmouseover;
                   onmousemove context.onmousemove;
                   onmouseout context.onmouseout;
                   onkeypress context.onkeypress;
                   onkeydown context.onkeydown;
                   onkeyup context.onkeyup;
                   disabled context.disabled;
                   tabindex context.tabindex;
                   onfocus context.onfocus;
                   onblur context.onblur;
                   onchange context.onchange;
                   cols context.cols;
                   rows context.rows;
                   readonly context.readonly;
                   accesskey context.accesskey;
                   onselect context.onselect"
   tal:content="context.value" />

${view.include('tiny_mce')}
<script language="javascript" type="text/javascript">
  $(function() {
      $("#${context.id}").tinymce({
          mode : 'exact',
          height: '${context.height}',
          width: '${context.width}',
          theme : '${context.theme}',
          theme_advanced_resizing : true,
          theme_advanced_toolbar_align : 'left',
          theme_advanced_toolbar_location : 'top'
      });
  });
</script>
