<div class="page-header" tal:condition="view.user">
  <h2>
    <a href="${request.application_url}ptah-manage/crowd/${view.url}">${view.user}</a>
  </h2>
</div>

<div class="row">
  <div class="span4 columns" tal:condition="view.actions">
    <h6>Actions</h6>

    <table class="zebra-striped">
      <tr tal:repeat="a view.actions">
	<td>
	  <a href="${view.url}${a.action}">${a.title}</a>
	</td>
      </tr>
    </table>
  </div>

  <div class="span12 columns"
       tal:attributes="class 'span12 columns' if view.actions 
		       else 'span14 offset2 columns'">
    <tal:block content="structure view.renderMessages()" />

    <tal:block content="structure content" />
  </div>
</div>
