<div class="page-header">
  <h2>User: ${context.user.name}</h2>
</div>

<form method="post">
  <fieldset>
    <div class="clearfix">
      <label>Id</label>
      <div class="input">
	<span class="uneditable-input">
	  ${context.user.id}
	</span>
      </div>
    </div>
    <div class="clearfix">
      <label>Name</label>
      <div class="input">
	<span class="uneditable-input">
	  ${context.user.name}
	</span>
      </div>
    </div>
    <div class="clearfix">
      <label>Login/Email</label>
      <div class="input">
	<span class="uneditable-input">
	  ${context.user.login}
	</span>
      </div>
    </div>
    <div class="clearfix">
      <label>Validated</label>
      <div class="input">
	<span class="uneditable-input">
	  ${context.user.validated}
	</span>
      </div>
    </div>
    <div class="clearfix">
      <label>Suspended</label>
      <div class="input">
	<span class="uneditable-input">
	  ${context.user.suspended}
	</span>
      </div>
    </div>
    <div class="clearfix">
      <label>Joined</label>
      <div class="input">
	<span class="uneditable-input">
	  ${view.format.datetime(context.user.joined, 'medium')}
	</span>
      </div>
    </div>
  </fieldset>

  <div class="actions" tal:define="sp context.user.suspended">
    <input type="submit" class="btn" value="Activate" name="activate"
	   tal:condition="sp" />
    <input type="submit" class="btn" value="Suspend" name="suspend"
	   tal:condition="not sp" />
    <input type="submit" class="btn" value="Validate" name="validate" />
    <input type="submit" class="btn danger" value="Remove" />
  </div>
</form>
