<div class="row">
  <div class="span3 columns"
       tal:define="url request.resource_url(context)">
    <ul>
      <li tal:repeat="action view.actions">
	<a href="${url}${action.action}">${action.title}</a>
      </li>
    </ul>
  </div>

  <div class="span13 columns">
    <tal:block content="structure view.renderMessages()" />

    ${content}
  </div>
</div>
